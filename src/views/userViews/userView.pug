extends ../base

block content
    div.userView__photo
        if (user.avatar==null)
            img(src="/static/statics/defaultProfile.jpeg")
        else
            img(src=`/${user.avatar}`)

    ul.n1s2
        li
            div 이름
            div=user.name 
        li
            div 직급
            div=user.grade 
        li 
            div 부서
            div=user.department 
        if (user.email)
            li 
                div 이메일
                div=user.email 
        if (loggedInUser.permission_user==true)
            li 
                div 생산/출고 계획 수정권한
                div=user.permission_plan
            li 
                div 직원 관리권한
                div=user.permission_user
    div.button__home--horizontal
        if (loggedInUser.permission_user==true)
            a(href=`${user._id}/infoEdit`).button--big.button--big--restricted 
                span 정보<br>수정하기 &rarr;
            a(href=`${user._id}/quit`).button--big.button--big--restricted 
                span 퇴사처리 &rarr;
    div.button__home--horizontal
        if (loggedInUser.mobile ==user.mobile )
            a(href=`${user._id}/pwEdit`).button--big.button--big--restricted 
                span 비밀번호<br>변경 &rarr;
            a(href=`/users/logout`).button--big.button--big--restricted 
                span 로그아웃 &rarr;

