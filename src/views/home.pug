extends base
include mixins/planMixin

block content 
    .home 
        div.plans__list
            i.far.fa-check-square 
            span 오늘부터 7일간의 일정 (~#{weekAfterRender})
        if plans
            .home__list
                each plan in plans
                    +plan(plan)
        else 
            include partials/no__info


        div.plans__list
            i.far.fa-check-square 
            span 제작되지 않은 일정 (~전일)
        if plans__yet
            .home__list
                each plan in plans__yet
                    +plan(plan)
        else 
            include partials/no__info

    script(src="/static/dynamics/js/goToDetailSearch.js") 

    