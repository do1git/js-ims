extends ../base

block content 
    form(method="POST")
        div
            label(for="free_flowRate") 무부하 유량
            input(value=pump.free_flowRate name="free_flowRate",placeholder="10",type="text",required,id="free_flowRate")
        div 
            label(for="pump_model") 모델
            input.form-uppercase(value=pump.code,name="code",placeholder="RNS",type="text",required,id="pump_model")
        
        div 
            label(for="user") 업체명
            input(value=pump.user,name="user",type="text",required,id="user")
        
        
        div
            label(for="motor") 모터
            input.form-uppercase(value=pump.motor,name="motor",type="text",placeholder="BLDC12V/2500, N/220V/60T",required,id="motor")
                
        div
            span 코팅
            div
                div
                    input(name="coating",value="p",required,type="radio",id="ptfe")
                    label(for="ptfe") PTFE (P)
                div 
                    input(name="coating",value="b",type="radio",id="anodize")
                    label(for="anodize") 블랙 아노다이징
                div 
                    input(name="coating",value="n",type="radio",id="nonCoating")
                    label(for="nonCoating") N
            
        div
            span 국내 / 해외
            div 
                div
                    input(name="domestic",value="true",required,type="radio",id="domestic")
                    label(for="domestic") 국내
                div 
                    input(name="domestic",value="false",type="radio",id="oversea")
                    label(for="oversea") 해외

        div 
            label(for="version") 버전
            input(name="version",value=pump.version,type="text",required,id="version")

        div
            input(type="submit",value="등록하기")
        
        div 
            div
                span 이전결과: 
                span 코팅: #{pump.coating} /
                if (pump.domestic)
                    span 국내
                else 
                    span &nbsp;해외                
    if errorMessage 
        span.spanError=errorMessage
